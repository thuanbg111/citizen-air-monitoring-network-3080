:root{
  --brand:#28a745; --ink:#0f1b2a; --muted:#5b6b7a; --line:#e6edf5; --bg:#fff;
  --radius:14px; --shadow:0 10px 26px rgba(15,27,42,.06)
}
/* ===== Base: mobile-first ===== */
*{box-sizing:border-box}
html,body{margin:0;background:var(--bg);color:var(--ink);font:16px/1.75 ui-sans-serif,system-ui,Segoe UI,Roboto,Arial}
img{display:block;max-width:100%;height:auto;border-radius:12px}
a{color:inherit;text-decoration:none}
.wrap{max-width:1120px;margin:auto;padding:16px}
.center{text-align:center}
button{font:inherit}
/* Grids – mobile: 1 cột */
.grid2,.grid3{display:grid;gap:16px}
.grid2{grid-template-columns:1fr}
.grid3{grid-template-columns:1fr}
/* Header + Nav (hamburger) */
.hdr{position:sticky;top:0;z-index:40;background:#fff;border-bottom:1px solid var(--line)}
.brand{display:flex;align-items:center;gap:10px;font-weight:800}
.brand img{height:44px;width:auto}
.menu-toggle{border:1px solid var(--line);background:#fff;border-radius:10px;padding:10px 14px;min-height:44px}
.nav{display:none;flex-direction:column;gap:8px;margin-top:10px}
.nav a{padding:10px 12px;border-radius:10px;color:#2b3440;min-height:44px;display:block}
.nav a.on,.nav a:hover{background:var(--brand);color:#fff}
.nav.open{display:flex}
/* Hero */
.hero{position:relative;background:linear-gradient(0deg,rgba(0,0,0,.45),rgba(0,0,0,.45)),url('../../images/hero.jpg') center/cover no-repeat;color:#fff}
.hero .wrap{padding:56px 16px}
.lead{max-width:760px;margin:6px auto}
/* Sections */
section{padding:24px 0;border-top:1px solid var(--line)}
.card{border:1px solid var(--line);border-radius:var(--radius);box-shadow:var(--shadow);background:#fff;padding:16px}
.badge{display:inline-block;background:#eef8f1;color:#0f6627;border:1px solid #bfe2c4;padding:4px 10px;border-radius:999px;font-weight:700}
/* Footer */
.ftr{background:#f8fbff;border-top:1px solid var(--line);margin-top:30px}
.fgrid{display:grid;grid-template-columns:1fr;gap:14px}
.logo-sm{height:36px;margin-bottom:4px}
.copy{text-align:center;color:#667;margin:8px 0 16px}
/* Forms */
.form{display:flex;flex-direction:column;gap:12px;max-width:560px}
input,textarea{width:100%;padding:12px;border:1px solid #ccd7e4;border-radius:12px}
.btn{display:inline-block;background:var(--brand);color:#fff;padding:12px 18px;border-radius:12px;min-height:44px}
.btn.ghost{background:#fff;color:var(--brand);border:1px solid var(--brand)}
/* Sub header */
.subhdr{background:var(--brand);color:#fff}
.subhdr .wrap{display:flex;align-items:center;justify-content:space-between}
.back{color:#fff;opacity:.9}
/* ===== ≥768px: tablet/desktop ===== */
@media(min-width:768px){
  .menu-toggle{display:none}
  .nav{display:flex;flex-direction:row;gap:14px;margin-top:0}
  .grid2{grid-template-columns:1fr 1fr}
  .grid3{grid-template-columns:repeat(3,1fr)}
  .hero .wrap{padding:72px 16px}
  .fgrid{grid-template-columns:1.2fr 1fr}
}
